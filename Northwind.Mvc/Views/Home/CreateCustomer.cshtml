@using Packt.Shared;
@model Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Create Customer Page</h1>
<hr />
<form method="POST">
    <input asp-for="@Model.CustomerId" placeholder="Customer Id" value="N/A" />
    <input asp-for="@Model.CompanyName" placeholder="Company Name" value="N/A" />
    <input asp-for="@Model.ContactName" placeholder="Contact Name" value="N/A" />
    <input asp-for="@Model.ContactTitle" placeholder="ContactTitle" value="N/A" />
    <input asp-for="@Model.Address" placeholder="Address" value="N/A" />
    <input asp-for="@Model.City" placeholder="City" value="N/A" />
    <input asp-for="@Model.Region" placeholder="Region" value="N/A" />
    <input asp-for="@Model.PostalCode" placeholder="Postal Code" value="N/A" />
    <input asp-for="@Model.Country" placeholder="Country" value="N/A" />
    <input asp-for="@Model.Phone" placeholder="Phone" value="N/A" />
    <input asp-for="@Model.Fax" placeholder="Fax" value="N/A" />
    <input type="submit" />
</form>
@if (Model is not null)
{
    <h2>Submitted Customer</h2>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>Customer Id</dt>
            <dd>@Model.CustomerId</dd>
            <dt>Company Name</dt>
            <dd>@Model.CompanyName</dd>
            <dt>Contact Name</dt>
            <dd>@Model.ContactName</dd>
            <dt>ContactTitle</dt>
            <dd>@Model.ContactTitle</dd>
            <dt>Address</dt>
            <dd>@Model.Address</dd>
            <dt>City</dt>
            <dd>@Model.City</dd>
            <dt>Region</dt>
            <dd>@Model.Region</dd>
            <dt>Postal Code</dt>
            <dd>@Model.PostalCode</dd>
            <dt>Country</dt>
            <dd>@Model.Country</dd>
            <dt>Phone</dt>
            <dd>@Model.Phone</dd>
            <dt>Fax</dt>
            <dd>@Model.Fax</dd>
        </dl>
    </div>
}